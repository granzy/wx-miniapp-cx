/**userInfo.wxss**/
@import "../common/circle/circle.wxss";
@import '../common/cell/cell';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #18a698;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.weui-cell__hd i{
  margin-right: 30rpx;
  color:#18a698;
}

.page-user .contactBtn {
   width:100%;
   border:none;
   border-radius: 0;
   padding:0;
   margin:0;
   font-size: 1em;
   position: static;
   line-height: normal;
}
.page-user .contactBtn::after {
  content: none;
}
.page-user .contactBtn>.row-cell {
  border-bottom: 0.5px solid #ddd;
}