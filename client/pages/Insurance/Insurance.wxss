/* pages/Insurance/Insurance.wxss */

.head-image {
  width: 100%;
  height: 300rpx;
}

.selfui-list-title {
  background-color: #eee;
  border-left: 6rpx solid #18a698;
  height: 80rpx;
  margin-top: 20rpx;
  vertical-align: middle;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-weight: bold;
}

.selfui-list-item {
  display: flex;
  flex-direction: row;
  border-bottom: 4rpx solid #eee;
}

.selfui-list-item-left {
  padding-left:30rpx;
  padding-top: 20rpx;
  padding-right: 20rpx;
  width:70%;
}

.selfui-list-item-right {
  display: flex;
  align-items: center;
  width:30%;
  justify-content: center;
}

.selfui-list-item-left-title{
  font-weight: bold;
  font-size:30rpx;
}

.selfui-list-item-left-desc{
  font-size:26rpx;
  color:#999;
}
